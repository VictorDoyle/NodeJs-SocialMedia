<!DOCTYPE html>
<html>
  <head>
    <title>Social Media App </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
    <!-- Add custom css specific here -->
  </head>
  <body>

    <!-- IF USER IS LOGGED IN SHOW THIS NAVBAR VERSION -->
<% if (user) { %>
  <div class="ui secondary pointing menu">
    <h1>Social Media App</h1>
    <a class="item active" href="/">
      Home
    </a>
    <!-- TODO: Messages Update in Version 1.0 -->
    <a class="item" href="/comments/index">
      Comments
    </a>

    <a class="item" href="/users/index">
      Friends
    </a>
    <!-- NAVBAR RIGHT SIDE -->
    <div class="right menu">
        <a class="ui item">
          <i class="plus circle icon" href="/posts/new"></i>
          New Post
        </a>
      <a class="ui item" href="/users/show">
        <i class="user circle icon "></i>
        Profile
    </a>
    <form action="/logout?_method=DELETE" method="POST">
    <input type="submit" value="Logout">
    </form>
      
    </div>
  </div>

 <!-- IF USER IS NOT LOGGED IN/NO ACCOUNT SHOW THIS NAVBAR VERSION -->
<% } else { %>
<div class="ui secondary pointing menu">
    <h1>Social Media App</h1>
  <div class="right menu">
    <a class="ui item" href="/register">
        <i class="plus square icon"></i>
        Create Account
      </a>
  </div>
  
</div>
  <% } %>
  

<!-- main page content -->
<!-- SECTION: LOGIN -->
<!-- user posts will show inside these divs -->

<div class="ui four column centered grid">
  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <div class="ui form">
          <div class="field">
            <form action="/login" method="POST">
            <label>Email</label>
            <div class="ui left icon input">
              <input type="email" name="email" placeholder="Email" required>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <label>Password</label>
            <div class="ui left icon input">
              <input type="password" required>

              <i class="lock icon"></i>
            </div>
          </div>
          <input type="submit" value="login" class="ui blue submit button"></input>
        </div>
      </div>
    </form>
      <!-- Sign up  -->
      <div class="middle aligned column">
        <a href="/register">
        <div class="ui big button">
          <i class="signup icon"></i>
          Sign Up
        </div>
      </a>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>
    
  </div> 

