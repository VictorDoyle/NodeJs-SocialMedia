<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
    <!-- Add custom css specific here -->
    <link rel="stylesheet" href="/styles/main.css"> 
    <!-- Jquery in app.js and event listeners -->
    <script src="/scripts/app.js" defer></script>
   
    <title>Social Media App </title>
  </head>
  <body>

    <!-- IF USER IS LOGGED IN SHOW THIS NAVBAR VERSION -->
<% if (user) { %>
  <div class="ui secondary pointing menu">
    <h1>Social Media App</h1>
    <a class="item active" href="/">
      Home
    </a>
    <a class="item" href="/users?userName=">
      Friends
    </a>

    <div class="mainPageSearchBar">
      <form action="/users" method="GET">
      <div class="ui action input">
        <input type="text" name="userName" placeholder="Search Users...">

        <button class="ui button">Search</button>
      </div>
      </form>
    </div>
    <!-- NAVBAR RIGHT SIDE -->
    <div class="right menu">
      <!-- Notifications here -->
      <div class="ui item">
        <div class="ui dropdown">
          <i class="plus heart icon"></i>
          <div class="text">Notifications</div>
          <i class="dropdown icon"></i>
          <!--FIXME: Add Ajax here for notification storing -->
          <div class="menu">
            <div class="item">New</div>
            <div class="item">
              <span class="description">Add timestamp of user interaction here</span>
              user.image + interpolate str val of user.userName here ...
            </div>
            <div class="item">
              <span class="description">Add timestamp of user interaction here</span>
              user.image + interpolate str val of user.userName here ...
            </div>
            <div class="item">
              <span class="description">Add timestamp of user interaction here</span>
              user.image + interpolate str val of user.userName here ...
            </div>
            </div>
              </div>
            </div>
        
        <a class="ui item" href="/posts/new">
          <i class="plus circle icon" ></i>
          New Post
        </a>
      <a class="ui item" href="/users/<%= user.id %>">
        <i class="user circle icon "></i>
        Profile
    </a>
    
      
    </div>
  </div>

 <!-- IF USER IS NOT LOGGED IN/NO ACCOUNT SHOW THIS NAVBAR VERSION -->
<% } else { %>
<div class="ui secondary pointing menu">
    <h1>Social Media App</h1>
  <div class="right menu">
    <a class="ui item" href="/register">
        <i class="plus square icon"></i>
        Create Account
      </a>
  </div>
  
</div>
  <% } %>
  

<!-- LOGIN OR REGISTER FIRST BEFORE MAINPAGE CONTENT SHOWS -->
<!-- SECTION: LOGIN -->

<% if (user) { %>

  <h2> Welcome Back <%= user.userName %> </h2>
  <div class="ui column grid">
    <div class="column">
      <div class="ui fluid card">
        <div class="image">
          <img class="ui medium rounded image" src="https://scontent-lga3-1.cdninstagram.com/v/t51.2885-15/e35/123138843_1067565367036684_2235957244731016243_n.jpg?_nc_ht=scontent-lga3-1.cdninstagram.com&_nc_cat=104&_nc_ohc=5AkmP-MEUCMAX9wiB3i&tp=1&oh=211571bff02a9d9f3225e5930f085fca&oe=6005AE42">
        </div>
        <div class="content">
          <a class="header">Post Link via ID here </a>
        </div>
      </div>
    </div>
    </div>

<!-- SECTION: MAINPAGE CONTENT DISPLAY FOR USERS IS BELOW -->
  <% } else { %>
    <div class="mainPageLoginBox">
      <div class="ui four column centered grid">
        <div class="ui placeholder segment">
        <div class="ui two column very relaxed stackable grid">
          <div class="column">
            <div class="ui form">
              <form action="/login" method="POST">
              <div class="field">
                <label>Email</label>
                <div class="ui left icon input">
                  <input type="email" name="email" placeholder="Email" required/>
                  <i class="user icon"></i>
                </div>
              </div>
            
              <div class="field">
                <label>Password</label>
                <div class="ui left icon input">
                  <input type="password" name="password" placeholder="Password" required>
    
                  <i class="lock icon"></i>
                </div>
              </div>
              <input type="submit" value="login" class="ui blue submit button"></input>
            </form>
            </div>
          </div>
        
          <!-- Sign up  -->
          <div class="middle aligned column">
            <a href="/register">
            <div class="ui big button">
              <i class="signup icon"></i>
              Sign Up
            </div>
          </a>
          </div>
        </div>
        <div class="ui vertical divider">
          Or
        </div>
      </div>
        
      </div> 
    </div>

    <% } %>










    <!-- required scripts for jquery and semantic-ui -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
  </body>
</html>