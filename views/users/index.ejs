<!DOCTYPE html>
<html>
  <head>
    <title>Social Media App </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
    <!-- Add custom css specific here -->
      <!-- Add custom css specific here -->
      <link rel="stylesheet" href="/styles/main.css"> 
      <link rel="stylesheet" href="/styles/mainindexpage.css"> 
  </head>


  <body>
  <!-- SECTION: NAVBAR -->
  <div class="ui secondary pointing menu">
    <h1>Social Media App</h1>
    <a class="item" href="/">
      <i class="home icon"></i>
      Home
    </a>
    <a class="item active" href="/users?userName=">
      <i class="users icon"></i>
      Friends
    </a>

    <div class="mainPageSearchBar">
      <form action="/users" method="GET">
      <div class="ui action input">
        <input type="text" name="userName" placeholder="Search Users...">

        <button class="ui button">Search</button>
      </div>
      </form>
    </div>
    <!-- NAVBAR RIGHT SIDE -->
    <div class="right menu">
      <!-- Notifications here -->
      <div class="ui item">
        <div class="ui dropdown">
          <i class="plus heart icon"></i>
          <div class="text">Notifications</div>
          <i class="dropdown icon"></i>
          <!--FIXME: Add Ajax here for notification storing -->
          <div class="menu">
            <div class="item">New</div>
            <div class="item">
              <span class="description">Add timestamp of user interaction here</span>
              user.image + interpolate str val of user.userName here ...
            </div>
            <div class="item">
              <span class="description">Add timestamp of user interaction here</span>
              user.image + interpolate str val of user.userName here ...
            </div>
            <div class="item">
              <span class="description">Add timestamp of user interaction here</span>
              user.image + interpolate str val of user.userName here ...
            </div>
            </div>
              </div>
            </div>
        
        <a class="ui item" href="/posts/new">
          <i class="plus circle icon" ></i>
          New Post
        </a>
      <a class="ui item" href="/users/<%= user.id %>">
        <i class="user circle icon "></i>
        Profile
    </a>
    
      
    </div>
  </div>

  <!-- SECTION: SHOW ALL USERS BELOW TAGGED BY /friends ID -->
  <main>
    <div class="mainIndexContent">
  <h2> Friends List</h2>
    <% if(!users.length) { %>
      <p>There are no users in your friends list yet.</p>
    <% } %>

    <div class="ui middle aligned divided list">
      <% users.forEach(user => { %>
        <div class="item">
          <div class="right floated content">
            <div class="ui button">Add</div> <!-- add link to /users/user.id/followbuttonclick -->
          </div>
          <!-- <img class="ui avatar image" src="linkback to /users/user.photo"> -->
          <div class="content presentUsers">
            <a href="/users/<%= user._id %>"> <%= user.firstName %> - <%= user.userName %></a>
          </div>
        </div>
        
      
      <% }) %>
    </div>
       

  </div>
  <div class="rightIndexContent">
    <!-- Right Index is User's recent activity -->
    <div class="ui raised link card">
      <% users.forEach(user => { %>
      <div class="ui list">
        <div class="item">
          <img class="ui avatar image" src="https://picsum.photos/id/1005/300/300">
          <div class="content">
            <a href="/users/<%= user._id %>"> <%= user.userName %></a>
            <div class="description"> last posted <%= user.posts %></div>
          </div>
        </div>
      </div>
      <% }); %>
      
    </div>
  </div>









  </main>




    <!-- required scripts for jquery and semantic-ui -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>

    <script type="text/javascript" src= "https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"> </script>  
  </body>
</html>